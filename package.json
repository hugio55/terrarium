{
  "name": "plantz",
  "version": "1.0.0",
  "description": "A relaxing idle game where you grow and collect plants",
  "main": "electron/main.js",
  "author": "Wheels, Emilio & Disruptor",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@pixi/react": "^7.1.2",
    "convex": "^1.30.0",
    "pixi.js": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.plantz.game",
    "productName": "PLANTZ",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": true,
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "portable": {
      "artifactName": "PLANTZ.exe"
    }
  }
}
